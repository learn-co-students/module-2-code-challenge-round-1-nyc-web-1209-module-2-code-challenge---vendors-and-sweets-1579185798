<%= form_for @vendorsweet do |f| %>
<%= f.label "Vendor:" %>
<%= f.collection_select :vendor_id, @vendors, :id, :name %>
<br>
<%= f.label "Sweet:" %>
<%= f.collection_select :sweet_id, @sweets, :id, :name %>
<br>
<%= f.label :Price %>
<%= f.number_field :price, :step => "0.01"%>
<br>
<%= f.submit "Submit" %>
<% end %>
