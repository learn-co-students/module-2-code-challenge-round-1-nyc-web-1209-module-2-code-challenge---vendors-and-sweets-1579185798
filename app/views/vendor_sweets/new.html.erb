<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <div>
      <p style="color:red;"> <%= error %> </p>
    </div>
  <% end%>
<% end %>

<%= form_for @vendor_sweet do |f| %>
    <%= f.label :vendor %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name %>
    <br><br>
    <%= f.label :sweet %>
    <%= f.collection_select :sweet_id, @sweets, :id, :name %>
    <br><br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br><br>
    <%= f.submit %>
<% end %>
